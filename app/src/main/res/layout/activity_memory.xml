<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#708E4D"
    tools:context=".Memory">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="725dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MEMORY"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#3A2D2D" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="262dp"
            android:layout_height="63dp"
            app:srcCompat="@drawable/memory" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblJugador1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Jugador1 "
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/lblJugador2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Jugador2 "
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnA"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="A"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:backgroundTint="#225C18" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnB"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="B"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:backgroundTint="#225C18" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="C"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:backgroundTint="#225C18" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnD"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="D"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:backgroundTint="#225C18" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnE"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="E"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:backgroundTint="#225C18" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnF"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="F"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:backgroundTint="#225C18" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnG"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="G"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:backgroundTint="#225C18" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnH"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:text="H"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:backgroundTint="#225C18" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnI"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="I"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:backgroundTint="#225C18" />
            </TableRow>

        </TableLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/lblTurno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turno "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:onClick="regresar"
                android:text="Regresar"
                android:textStyle="bold"
                app:backgroundTint="#FF9800"
                app:icon="@android:drawable/ic_menu_revert" />

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnReiniciar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:onClick="reiniciar"
                android:text="Reiniciar"
                android:textStyle="bold"
                app:backgroundTint="#FF9800"
                app:icon="@android:drawable/ic_popup_sync" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>